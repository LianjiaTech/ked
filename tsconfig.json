{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "kedesign": ["components/index.tsx"],
      "kedesign/es/*": ["components/*"],
      "kedesign/lib/*": ["components/*"]
    },
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
